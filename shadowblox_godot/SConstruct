# -*- mode: python -*-
# SConstruct for shadowblox GDExtension
# Run: scons platform=<platform> target=<target> use_llvm=yes

import os
import subprocess
import sys

# Build the shadowblox library first
print("Building shadowblox library...")
subprocess.run([sys.executable, "-m", "SCons", "-C", "..", "-j4"], check=True)

# Force use of clang/llvm for compatibility with shadowblox
# The use_llvm option must be set before invoking godot-cpp's SConstruct
ARGUMENTS["use_llvm"] = "yes"

# Now build the GDExtension
env = SConscript("../extern/godot-cpp/SConstruct")

# Force C++20 for shadowblox compatibility (required for StringLiteral NTTP)
# godot-cpp uses C++17 by default, but shadowblox requires C++20
if env["platform"] != "windows":
    # Replace C++17 with C++20 in CXXFLAGS
    env["CXXFLAGS"] = [f if f != "-std=c++17" else "-std=c++20" for f in env["CXXFLAGS"]]
    # Also check CCFLAGS
    env["CCFLAGS"] = [f if f != "-std=c++17" else "-std=c++20" for f in env["CCFLAGS"]]
else:
    # For MSVC
    env["CXXFLAGS"] = [f if f != "/std:c++17" else "/std:c++20" for f in env["CXXFLAGS"]]

# Add our include paths
env.Append(CPPPATH=["src/", "include/"])
sources = Glob("src/*.cpp")

# Link shadowblox and luau libraries
env.Append(LIBPATH=["../shadowblox/"])
env.Append(LIBS=["shadowblox"])
env.Append(LIBPATH=["../extern/"])
env.Append(LIBS=["luau"])

# Add include paths (both include and src directories for Luau)
env.Append(CPPPATH=[
    "../shadowblox/include/",
    "../extern/luau/Common/include/",
    "../extern/luau/Common/src/",
    "../extern/luau/Ast/include/",
    "../extern/luau/Ast/src/",
    "../extern/luau/Compiler/include/",
    "../extern/luau/Compiler/src/",
    "../extern/luau/VM/include/",
    "../extern/luau/VM/src/",
    "../extern/luau/CodeGen/include/",
    "../extern/luau/CodeGen/src/",
    "../extern/include/",
])

if env["target"] in ["editor", "template_debug"]:
    doc_data = env.GodotCPPDocData(
        "src/gen/doc_data.gen.cpp", source=Glob("doc_classes/*.xml")
    )
    sources.append(doc_data)

if env["platform"] == "macos":
    library = env.SharedLibrary(
        "bin/shadowblox/libshadowbloxgd.{}.{}.framework/libshadowbloxgd.{}.{}".format(
            env["platform"], env["target"], env["platform"], env["target"]
        ),
        source=sources,
    )
elif env["platform"] == "ios":
    if env["ios_simulator"]:
        library = env.StaticLibrary(
            "bin/shadowblox/libshadowbloxgd.{}.{}.simulator.a".format(
                env["platform"], env["target"]
            ),
            source=sources,
        )
    else:
        library = env.StaticLibrary(
            "bin/shadowblox/libshadowbloxgd.{}.{}.a".format(
                env["platform"], env["target"]
            ),
            source=sources,
        )
else:
    library = env.SharedLibrary(
        "bin/shadowblox/libshadowbloxgd{}{}".format(env["suffix"], env["SHLIBSUFFIX"]),
        source=sources,
    )

env.NoCache(library)
Default(library)
